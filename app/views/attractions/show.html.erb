<h1>Ride: <%=@attraction.name%></h1>

<h2>Tickets Required: <%= @attraction.tickets%></h2>
<h2>Minimum Height Required: <%-@attraction.min_height%></h2>
<h2>Nausea Rating: <%-@attraction.nausea_rating%></h2>
<h2>Happiness Rating: <%-@attraction.happiness_rating%></h2>

<%if policy(Attraction.new).create? %>
	<%= link_to "Edit Attraction", edit_attraction_path %>
<%else%>
	<%= form_tag('/rides', method: :post) do %>
	<%= hidden_field_tag('id', "#{@attraction.id}") %>
	<%= button_tag('Go on this ride')%>
	<%end%>
<%end%>
